{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
          "@src/*": ["src/*"],
        },  
    },
    "lib": [
        "es2015"
    ],
    "include": [
        "app.ts",
        "Controllers",
        "Routes/"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
}